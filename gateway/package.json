{
  "name": "@azimutt/gateway",
  "version": "0.1.9",
  "description": "A Gateway to proxy database access for Azimutt frontend",
  "keywords": [
    "database",
    "database tool",
    "database schema",
    "diagram",
    "erd",
    "entity-relationship diagram"
  ],
  "homepage": "https://azimutt.app",
  "author": {
    "name": "Lo√Øc Knuchel",
    "email": "loicknuchel@gmail.com",
    "url": "https://loicknuchel.fr"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azimuttapp/azimutt.git",
    "directory": "gateway"
  },
  "main": "./out/index.js",
  "types": "./out/index.d.ts",
  "bugs": {
    "url": "https://github.com/azimuttapp/azimutt/issues"
  },
  "scripts": {
    "setup": "pnpm install && pnpm run build",
    "start": "tsx watch ./src/start.ts .env | pino-pretty --colorize",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "tsc --noEmit && eslint .",
    "lint:fix": "tsc --noEmit && eslint . --fix",
    "build": "rm -rf ./out && tsc",
    "build:docker:prod": "docker build . -t azimutt-gateway --build-arg APP_ENV=production",
    "preview": "node out/start.js",
    "dry-publish": "pnpm run build && pnpm test && pnpm pack"
  },
  "dependencies": {
    "@azimutt/connector-bigquery": "workspace:^",
    "@azimutt/connector-couchbase": "workspace:^",
    "@azimutt/connector-mariadb": "workspace:^",
    "@azimutt/connector-mongodb": "workspace:^",
    "@azimutt/connector-mysql": "workspace:^",
    "@azimutt/connector-postgres": "workspace:^",
    "@azimutt/connector-snowflake": "workspace:^",
    "@azimutt/connector-sqlserver": "workspace:^",
    "@azimutt/models": "workspace:^",
    "@azimutt/utils": "workspace:^",
    "@fastify/cors": "8.2.1",
    "@sinclair/typebox": "0.28.10",
    "ajv": "8.12.0",
    "dotenv": "16.4.5",
    "env-schema": "5.2.1",
    "fastify": "4.17.0",
    "fastify-plugin": "4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "pino-pretty": "^11.1.0",
    "prettier": "^3.2.5",
    "tsx": "^4.11.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
