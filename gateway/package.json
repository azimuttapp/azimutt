{
  "name": "azimutt-gateway",
  "version": "0.0.1",
  "description": "A Gateway to proxy database access for Azimutt frontend",
  "keywords": [
    "database",
    "database tool",
    "database schema",
    "diagram",
    "erd",
    "entity-relationship diagram"
  ],
  "homepage": "https://azimutt.app",
  "author": {
    "name": "LoÃ¯c Knuchel",
    "email": "loicknuchel@gmail.com",
    "url": "https://loicknuchel.fr"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azimuttapp/azimutt.git",
    "directory": "gateway"
  },
  "bugs": {
    "url": "https://github.com/azimuttapp/azimutt/issues"
  },
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "setup": "npm install",
    "start": "tsx watch src .env | pino-pretty --colorize",
    "pretest": "npm run build",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check:types": "tsc --noEmit",
    "build": "rm -rf ./build && esbuild `find src \\( -name '*.ts' \\)` --platform=node --outdir=build --resolve-extensions=.js",
    "build:docker:prod": "docker build . -t azimutt-gateway --build-arg APP_ENV=production",
    "preview": "node build",
    "update": "npm update --save-dev && npm update --save && npm install"
  },
  "dependencies": {
    "@azimutt/connector-couchbase": "file:../libs/connector-couchbase",
    "@azimutt/connector-mongodb": "file:../libs/connector-mongodb",
    "@azimutt/connector-postgres": "file:../libs/connector-postgres",
    "@azimutt/database-types": "file:../libs/database-types",
    "@azimutt/utils": "file:../libs/utils",
    "@fastify/cors": "^8.2.1",
    "@sinclair/typebox": "^0.28.10",
    "ajv": "^8.12.0",
    "dotenv": "^16.0.3",
    "env-schema": "^5.2.0",
    "fastify": "^4.17.0",
    "fastify-plugin": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20.1.4",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "esbuild": "^0.17.19",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "pino-pretty": "^10.0.0",
    "prettier": "^2.8.8",
    "tsx": "^3.12.7",
    "typescript": "^5.0.4",
    "vitest": "^0.31.0"
  }
}
