{
  "name": "azimutt",
  "version": "1.0.0",
  "description": "Next gen ERD: explore and analyze your SQL database schema",
  "keywords": [
    "erd",
    "entity-relationship diagram",
    "database tool",
    "database schema",
    "diagram"
  ],
  "homepage": "https://github.com/azimuttapp/azimutt",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azimuttapp/azimutt.git"
  },
  "bugs": {
    "url": "https://github.com/azimuttapp/azimutt/issues"
  },
  "license": "MIT",
  "author": "Lo√Øc Knuchel <loicknuchel@gmail.com> (https://loicknuchel.fr)",
  "scripts": {
    "dev": "concurrently \"vite\" \"npm run dev:app\" \"npm run dev:tailwind\" \"npm run dev:book\"",
    "build": "npm run build:tailwind && npm run build:app && npm run build:book && vite build",
    "dev:app": "elm-live .elm-spa/defaults/Main.elm --dir=public --pushstate -- --output=public/dist/elm.js",
    "build:app": "npx elm-spa build",
    "dev:tailwind": "npx tailwindcss -i ./public/styles.tailwind.css -o ./public/styles.css --watch",
    "build:tailwind": "npx tailwindcss -i ./public/styles.tailwind.css -o ./public/styles.css --minify",
    "dev:book": "elm-book src/Components/Book.elm --dir=public --start-page=book.html --port 8001 -- --output=public/dist/book.js",
    "build:book": "npx elm make ./src/Components/Book.elm --output=./dist/book.js",
    "dev:browser": "cd packages/browser-extension && npm run dev",
    "build:browser": "cd packages/browser-extension && npm run build",
    "preview": "vite preview"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.4.0",
    "@tailwindcss/typography": "^0.5.1",
    "concurrently": "^7.1.0",
    "elm-coverage": "^0.4.0",
    "elm-review": "^2.5.5",
    "elm-spa": "^6.0.4",
    "elm-test": "^0.19.1-revision7",
    "tailwindcss": "^3.0.18",
    "vite": "^2.8.6",
    "vite-plugin-elm": "^2.5.1"
  }
}
