{
  "name": "azimutt",
  "version": "1.0.0",
  "description": "Next gen ERD: explore and analyze your SQL database schema",
  "keywords": [
    "erd",
    "entity-relationship diagram",
    "database tool",
    "database schema",
    "diagram"
  ],
  "homepage": "https://github.com/azimuttapp/azimutt",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azimuttapp/azimutt.git"
  },
  "bugs": {
    "url": "https://github.com/azimuttapp/azimutt/issues"
  },
  "license": "MIT",
  "author": "Lo√Øc Knuchel <loicknuchel@gmail.com> (https://loicknuchel.fr)",
  "scripts": {
    "start": "npm install && npm run dev",
    "dev": "concurrently \"npm run dev:app\" \"npm run dev:ts\" \"npm run dev:tailwind\" \"npm run dev:book\"",
    "build": "npm run build:tailwind && npm run build:ts && npm run build:app",
    "dev:app": "elm-live .elm-spa/defaults/Main.elm --dir=public --pushstate -- --output=public/dist/elm.js",
    "build:app": "npx elm-spa build",
    "dev:ts": "./node_modules/.bin/esbuild ts-src/index.ts --outfile=public/script.js --bundle --watch",
    "build:ts": "./node_modules/.bin/esbuild ts-src/index.ts --outfile=public/script.js --bundle --minify --sourcemap",
    "dev:tailwind": "npx tailwindcss -i ./public/styles.css -o ./public/dist/styles.css --watch",
    "build:tailwind": "npx tailwindcss -i ./public/styles.css -o ./public/dist/styles.css --minify",
    "dev:book": "elm-book src/Components/Book.elm --dir=public --start-page=book.html --port 8001 -- --output=public/dist/book.js",
    "upgrade": "npx npm-check-updates -u"
  },
  "dependencies": {
    "@sentry/browser": "^6.19.7",
    "@sentry/tracing": "^6.19.7",
    "@splitbee/web": "^0.3.0",
    "@supabase/supabase-js": "^1.35.3",
    "jiff": "^0.7.3"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.0",
    "@tailwindcss/typography": "^0.5.2",
    "concurrently": "^7.1.0",
    "elm-coverage": "^0.4.1",
    "elm-review": "^2.7.1",
    "elm-test": "^0.19.1-revision7",
    "esbuild": "^0.14.39",
    "tailwindcss": "^3.0.24",
    "typescript": "^4.6.4"
  }
}
