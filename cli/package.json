{
  "name": "azimutt",
  "version": "0.1.13",
  "description": "Export database schema from relational or document databases. Import it to https://azimutt.app",
  "keywords": [
    "database",
    "database tool",
    "database schema",
    "diagram",
    "erd",
    "entity-relationship diagram"
  ],
  "homepage": "https://azimutt.app",
  "author": {
    "name": "Lo√Øc Knuchel",
    "email": "loicknuchel@gmail.com",
    "url": "https://loicknuchel.fr"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azimuttapp/azimutt.git",
    "directory": "cli"
  },
  "bugs": {
    "url": "https://github.com/azimuttapp/azimutt/issues"
  },
  "type": "module",
  "main": "./out/index.js",
  "types": "./out/index.d.ts",
  "bin": {
    "azimutt": "./out/index.js"
  },
  "scripts": {
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start:windows": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/index.ts",
    "test": "jest",
    "lint": "tsc --noEmit",
    "build": "rm -rf ./out && tsc",
    "exec": "npm run build && node ./out/index.js",
    "local": "sudo pnpm install -g && azimutt",
    "dry-publish": "pnpm run build && pnpm test && pnpm pack"
  },
  "dependencies": {
    "@azimutt/models": "workspace:^",
    "@azimutt/gateway": "workspace:^",
    "@azimutt/utils": "workspace:^",
    "chalk": "5.3.0",
    "clear": "0.1.0",
    "commander": "12.1.0",
    "figlet": "1.7.0",
    "open": "10.1.0",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/clear": "^0.1.4",
    "@types/figlet": "^1.5.8",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.13",
    "jest": "^29.7.0",
    "nodemon": "^3.1.2",
    "ts-jest": "^29.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
