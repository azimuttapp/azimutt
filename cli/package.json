{
  "name": "azimutt-cli",
  "description": "A CLI to better work with https://azimutt.app",
  "version": "0.0.1",
  "author": "Lo√Øc Knuchel",
  "license": "MIT",
  "main": "./lib/index.js",
  "bin": {
    "azimutt": "./lib/index.js"
  },
  "scripts": {
    "init": "npm install && npm run build && chmod +x ./lib/index.js",
    "build": "tsc",
    "test": "jest",
    "exec": "npm run build && lib/index.js",
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start:windows": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/index.ts",
    "local": "sudo npm install -g && azimutt",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "clear": "^0.1.0",
    "commander": "^10.0.0",
    "figlet": "^1.5.2",
    "mongodb": "^5.0.0",
    "pg": "^8.9.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.4.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@types/pg": "^8.6.6",
    "jest": "^29.4.1",
    "nodemon": "^2.0.20",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  }
}
