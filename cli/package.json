{
  "name": "azimutt",
  "version": "0.0.37",
  "description": "Export database schema from relational or document databases. Import it to https://azimutt.app",
  "keywords": [
    "database",
    "database tool",
    "database schema",
    "diagram",
    "erd",
    "entity-relationship diagram"
  ],
  "homepage": "https://azimutt.app",
  "author": {
    "name": "Lo√Øc Knuchel",
    "email": "loicknuchel@gmail.com",
    "url": "https://loicknuchel.fr"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/azimuttapp/azimutt.git",
    "directory": "cli"
  },
  "bugs": {
    "url": "https://github.com/azimuttapp/azimutt/issues"
  },
  "type": "module",
  "main": "./out/index.js",
  "types": "./out/index.d.ts",
  "bin": {
    "azimutt": "./out/index.js"
  },
  "scripts": {
    "setup": "npm install && npm run build && chmod +x ./out/index.js",
    "start": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
    "start:windows": "nodemon --watch 'src/**/*.ts' --exec \"npx ts-node\" src/index.ts",
    "test": "jest",
    "build": "rm -rf ./out && tsc",
    "update": "npm update --save-dev && npm update --save && npm install",
    "exec": "npm run build && node ./out/index.js",
    "local": "sudo npm install -g && azimutt",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "dry-publish": "npm run build && npm test && npm pack"
  },
  "dependencies": {
    "@azimutt/gateway": "^0.0.24",
    "@azimutt/utils": "^0.0.8",
    "chalk": "4.1.2",
    "clear": "0.1.0",
    "commander": "11.0.0",
    "figlet": "1.6.0",
    "open": "10.0.3"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/clear": "^0.1.4",
    "@types/figlet": "^1.5.8",
    "@types/jest": "^29.5.12",
    "@types/node": "^18.19.26",
    "jest": "^29.7.0",
    "nodemon": "^2.0.22",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.3"
  }
}
