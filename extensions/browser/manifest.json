{
  "manifest_version": 3,
  "name": "Azimutt",
  "version": "1.0",
  "homepage_url": "https://azimutt.app",
  "description": "A new way to explore your database schema",
  "icons": {
    "16": "azimutt_16.png",
    "32": "azimutt_32.png",
    "48": "azimutt_48.png",
    "128": "azimutt_128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://github.com/*.sql"],
      "js": ["appendButton.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "azimutt_16.png",
      "32": "azimutt_32.png",
      "48": "azimutt_48.png",
      "128": "azimutt_128.png"
    },
    "default_title": "Open Azimutt"
  }
}
